<%= simple_form_for(@modifier) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :value %>
    <%= f.input :kind,
                as: :radio_buttons,
                collection: Modifier::KINDS.map { |m| [m.titleize, m] } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
