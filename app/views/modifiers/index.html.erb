<h1>Modificateur</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Value</th>
      <th>Kind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modifiers.each do |modifier| %>
      <tr>
        <td><%= modifier.title %></td>
        <td><%= modifier.description %></td>
        <td><%= modifier.value %></td>
        <td><%= modifier.kind %></td>
        <td><%= link_to 'Show', modifier %></td>
        <td><%= link_to 'Edit', edit_modifier_path(modifier) %></td>
        <td><%= link_to 'Destroy', modifier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Modifier', new_modifier_path %>
