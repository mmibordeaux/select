<p><%= candidates.total_count %> candidats</p>
<table class="table mt-5">
  <thead>
    <tr>
      <th width="30">#</th>
      <th width="80">Numéro</th>
      <th>Prénom</th>
      <th>Nom</th>
      <th width="400">Baccalaureat</th>
      <th width="80">Boursier</th>
      <th>Evaluation</th>
      <th width="80">Production</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.position %></td>
        <td><%= link_to candidate.number, candidate %></td>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td class="small"><%= link_to candidate.baccalaureat, candidate.baccalaureat %></td>
        <td><%= candidate.scholarship ? 'Oui' : 'Non' %></td>
        <td><%= candidate.evaluation_note.round(2) %></td>
        <td>
          <% if candidate.production_analyzed %>
            <% if candidate.production_in_formulaire %>
              Oui
            <% elsif candidate.production_somewhere_else %>
              Peut-être
            <% else %>
              Non
            <% end %>
          <% else %>
            Non analysée
          <% end %>
        </td>
        <td>
          <%= link_to 'Edit', edit_candidate_path(candidate), class: 'btn btn-primary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate candidates, theme: 'twitter-bootstrap-4' %>