<h1><%= @candidate %></h1>

<p><%= @candidate.number %></p>

<p><%= @candidate.level %></p>
<p>
  <strong>Baccalaureat:</strong>
  <%= @candidate.baccalaureat %>
</p>

<p>
  <strong>Moyenne:</strong>
  <%= @candidate.dossier_note %>
</p>

<p>
  <strong>Evaluation:</strong>
  <%= @candidate.evaluation_note %>
</p>


<ul class="nav nav-tabs">
<% Parcoursup::PARTS.each_with_index do |kind, index| %>
  <li class="nav-item">
    <a class="nav-link<%= ' active' if index.zero? %>" href="#<%= kind %>" data-toggle="tab" ><%= kind.titleize %></a>
  </li>
<% end %>
</ul>

<div class="tab-content" id="parcoursup">
  <% Parcoursup::PARTS.each_with_index do |kind, index| %>
    <div class="tab-pane<%= ' show active' if index.zero? %>" id="<%= kind %>" role="tabpanel" aria-labelledby="home-tab">
      <%= sanitize @candidate.parcoursup(kind) %>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_candidate_path(@candidate), class: 'btn btn-primary' %>