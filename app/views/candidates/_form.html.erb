<%= simple_form_for(candidate) do |f| %>
  <div class="row">
    <div class="col-md-3">
      <h2><%= candidate %></h2>
      <p>Num√©ro : <%= candidate.number %></p>
      <p>Baccalaureat : <%= candidate.baccalaureat %></p>
      <p>Moyenne : <%= candidate.dossier_note %></p>
      <%= link_to 'Ouvrir dans Parcoursup', candidate.parcoursup_url, target: :_blank, class: 'btn btn-light' %>
    </div>
    <div class="col-md-4">
      <h2>Evaluation</h2>
      <%= f.input :evaluation_attitude,
                  as: :radio_buttons,
                  collection: Candidate::EVALUATION_ATTITUDE %>
      <%= f.input :evaluation_intention,
                  as: :radio_buttons,
                  collection: Candidate::EVALUATION_INTENTION %>
      <%= f.input :evaluation_production,
                  as: :radio_buttons,
                  collection: Candidate::EVALUATION_PRODUCTION %>
      <%= f.input :evaluation_localization,
                  as: :radio_buttons,
                  collection: Candidate::EVALUATION_LOCALIZATION %>
      <%= f.input :evaluation_comment %>
      <%= f.submit 'Enregistrer', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
